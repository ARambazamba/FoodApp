rnd=$RANDOM
grp=foodapp-$rnd
appPlan=foodapp
loc=westeurope
reg=foodacr
appservice=foodservice

# create a resource group
az group create -n $grp -l $loc

# create an App Service plan
az appservice plan create -n $appPlan -g $grp --sku FREE

az acr create -g $grp -n $reg --sku Basic -l westeurope --admin-enabled true

az appservice plan create -n $appPlan -g $grp --sku b1 --is-linux

az webapp create -g $grp -p $appPlan -n $appservice -i $reg.azurecr.io/foodservice